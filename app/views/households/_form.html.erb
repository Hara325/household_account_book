<%= form_for(household) do |f| %>
  <% if household.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(household.errors.count, "error") %> prohibited this household from being saved:</h2>

      <ul>
      <% household.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='input-group date datepicker' >
    <%= f.label :日付 %>
    <%= f.text_field :use_date, class: 'form-control', placeholder: 'YYYY/MM/DD' %>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>

  <div class="field">
    <%= f.label :分類 %>
    <%= f.select :category_id, @category.map{|o| [o.category_name, o.id]} %>
  </div>

  <div class="field">
    <%= f.label :用途 %>
    <%= f.text_field :use %>
  </div>

  <div class="field">
    <%= f.label :費用 %>
    <%= f.number_field :cost %>
  </div>

  <div class="field">
    <%= f.label :メモ %>
    <%= f.text_area :memo %>
  </div>

<!--
  <div class="field">
    <%= f.label :ユーザー %>
    <%= f.number_field :user_id %>
  </div>
-->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
